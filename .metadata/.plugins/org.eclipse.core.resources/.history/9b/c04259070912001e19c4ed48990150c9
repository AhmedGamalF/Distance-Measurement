/******************************************************************************
 *
 * Module: Ultrasonic
 *
 * File Name: ultrasonic.c
 *
 * Description: Header file for the Ultrasonic driver
 *
 * Author : Ahmed Gamal
 *
 *******************************************************************************/
# include "ultrasonic.h"
# include "gpio.h"
# include "icu.h"
# include <util/delay.h> /* for delay*/

/* global variable to detect the pulse */
volatile uint16 g_edgecount ;
volatile uint16 g_timepulse ;

/*******************************************************************************
 *                      Functions Definitions                                  *
 *******************************************************************************/

/*
 * Description
 * Initialize the ICU driver as required.
 * Setup the ICU call back function.
 * Setup the direction for the trigger pin as output pin through the GPIO driver
 */
void Ultrasonic_init(void)
{
	/*Initialize the ICU driver*/
	ICU_ConfigType configration = {F_CPU_8,RAISING};
	ICU_init(&configration);
	/*Setup the ICU call back function*/
	ICU_setCallBack(a_ptr);
	/* Setup the direction for the trigger pin as output pin */
	GPIO_setupPinDirection(PORTB_ID, PIN5_ID, PIN_OUTPUT);
}

/*
 * Description
 * Send the Trigger pulse to the ultrasonic.
 */
void Ultrasonic_Trigger(void)
{
	/* Send the pulse*/
	GPIO_writePin(PORTB_ID, PIN5_ID, LOGIC_HIGH);
	_delay_us(10); /* wait 10us*/
	/* close the Trigger pin*/
	GPIO_writePin(PORTB_ID, PIN5_ID, LOGIC_LOW);
}

/*
 * Description
 * Send the trigger pulse by using Ultrasonic_Trigger function.
 * Start the measurements by the ICU from this moment.
 */
uint16 Ultrasonic_readDistance(void)
{
	/*Send the trigger pulse */
	Ultrasonic_Trigger();

}

/*
 * Description
 * This is the call back function called by the ICU driver.
 * This is used to calculate the high time (pulse time) generated by the ultrasonic sensor.
 */
void Ultrasonic_edgeProcessing(void)
{
	g_edgeCount ++ ;
	if(g_edgeCount == 1 )
	{
		/*
		 * Clear the timer counter register to start measurements from the
		 * first detected rising edge
		 */
		ICU_clearTimerValue();
		/* Detect Falling edge*/
		ICU_setEdgeDetectionType(FALLING);
	}
	else if(g_edgeCount == 2)
	{
		/* Save the high time */
		g_timepulse = ICU_getInputCaptureValue();
		/* Detect a raising edge */
		ICU_setEdgeDetectionType(RAISING);
	}
}
